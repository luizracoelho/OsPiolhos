<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Piolhos.App.Views.TabPage"
            xmlns:pages="clr-namespace:Piolhos.App.Views"
            Title="Piolho Points">

    <TabbedPage.BarTextColor>
        <OnPlatform x:TypeArguments="Color" iOS="#ffcb05"></OnPlatform>
    </TabbedPage.BarTextColor>

    <TabbedPage.BarBackgroundColor>
        <OnPlatform x:TypeArguments="Color" iOS="#000000"></OnPlatform>
    </TabbedPage.BarBackgroundColor>

    <pages:ParceirosPage />

    <ContentPage Title="Promoções">
        <ContentPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource" iOS="icon_flame.png"></OnPlatform>
        </ContentPage.Icon>
        <StackLayout Padding="10">
            <Label Text="Mostrando as promoções."/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Eventos">
        <ContentPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource" iOS="icon_calendar.png"></OnPlatform>
        </ContentPage.Icon>
        <StackLayout Padding="10">
            <Label Text="Mostrando os eventos."/>
        </StackLayout>
    </ContentPage>

</TabbedPage>