<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Piolhos.App.Views.HomePage"
             ControlTemplate="{StaticResource WaitingTemplate}"
             Title="Os Piolhos">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="home_fundo.jpg" 
                   Aspect="Fill"/>
            <StackLayout Orientation="Horizontal"
                         AbsoluteLayout.LayoutBounds="0,1,1,AutoSize" 
                         AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional">
                <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness" Android="10" iOS="10,10,10,28"></OnPlatform>
                </StackLayout.Padding>

                <Button Text="Criar Conta" 
                            HorizontalOptions="FillAndExpand" 
                            Style="{StaticResource ButtonSecondaryStyle}" 
                            Command="{Binding CadastroCommand}" />
                <Button Text="Entrar" 
                            HorizontalOptions="FillAndExpand" 
                            Style="{StaticResource ButtonPrimaryStyle}" 
                            Command="{Binding LoginCommand}" />
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>